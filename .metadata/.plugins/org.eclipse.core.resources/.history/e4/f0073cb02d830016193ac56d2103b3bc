drop table GAMEPARTICIPATIONS;
drop table CARD;
drop table DECK;
drop table GAME;
drop table PLAYER;



CREATE TABLE IF NOT EXISTS PLAYER (
ID INT primary key,
NAME varchar(255),
TAGLINE varchar(255)
);


CREATE TABLE GAME (
ID INT primary key,
GAME_DATE date,
GAME_STATUS varchar(25)
);

CREATE TABLE IF NOT EXISTS DECK(
ID INT primary key ,
NAME varchar(255),
PLAYER_ID INT,
FOREIGN KEY(PLAYER_ID) REFERENCES PLAYER(ID)
);

CREATE TABLE IF NOT EXISTS CARD(
ID INT primary key ,
NAME varchar(255),
ENERGY INT,
MOTIVATION INT,
CREDIBILITY INT,
DECK_ID INT,
FOREIGN KEY(DECK_ID) REFERENCES DECK(ID)
);

commit;